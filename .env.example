# OpenRouter Configuration
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-api-key-here

# Model Configuration
GENERATION_MODEL=anthropic/claude-3-5-sonnet
ROUTING_MODEL=anthropic/claude-3-haiku
EVAL_MODEL=anthropic/claude-3-5-sonnet

# Retrieval Configuration
RETRIEVAL_TOP_K=5
KNOWLEDGE_GAP_THRESHOLD=0.5

# Performance Configuration
REQUEST_TIMEOUT_SECONDS=4

# Vector Search Performance Configuration
VECTOR_SEARCH_TIMEOUT=10        # Vector search timeout in seconds
EMBEDDING_TIMEOUT=5             # Embedding generation timeout in seconds
CACHE_SIZE=1000                 # Query cache maximum size
CACHE_TTL=300                   # Cache time-to-live in seconds

# Pinecone Configuration
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_INDEX_NAME=atlan-support
PINECONE_ENVIRONMENT=gcp-starter

# OpenAI Configuration (for embeddings)
OPENAI_API_KEY=sk-your-openai-api-key-here
EMBEDDING_MODEL=text-embedding-3-small

# Data Configuration
PROCESSED_CHUNKS_PATH=./processed_chunks.json